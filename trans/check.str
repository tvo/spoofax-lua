module check

imports
  libstratego-lib
  include/Lua
  lib/editor-common.generated
  desugar
  globals
  rename
  rename-loop

rules

  analyze:
    (ast, path, project-path) -> ast'
    with
      ast' := <desugar-top;
               rename-top;
               rename-loop-top;
               globals-top> ast

rules

  check-error:
    File(Some(comment), _) -> (comment, $[Construct may not be preceded by layout])
    where
      not(<origin-location> comment => (1,0,_,_))

  check-error:
    Break(){} -> (<id>, "No loop to break")

  check-note:
    Var(x{}) -> (<id>, $[Use of global [x]])
    where
      <GlobalVar> x

  check-warning:
    Var(x{}) -> (<id>, $[Use of unassigned global [x]])
    where
      not(<GlobalVar> x)
